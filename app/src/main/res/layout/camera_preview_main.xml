<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="left">

    <ImageView
        android:id="@+id/img_preview_snapshot"
        android:layout_width="480px"
        android:layout_height="720px"
        android:background="#0f0"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

    <burningaltar.com.camerapreviewcompat.CameraPreviewViewCompat
        android:id="@+id/camera_preview"
        android:background="#00f"
        android:layout_width="200dp"
        android:layout_height="300dp"
        custom:cameraApiLevel="one"
        custom:frontFacing="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/btn_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch" />

    <Button
        android:id="@+id/btn_snapshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_switch"
        android:text="Snapshot" />

    <Button
        android:id="@+id/btn_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_snapshot"
        android:text="Photo" />

    <Button
        android:id="@+id/lbl_cam_ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btn_photo"
        android:gravity="center"
        android:text="Photo" />


</RelativeLayout>